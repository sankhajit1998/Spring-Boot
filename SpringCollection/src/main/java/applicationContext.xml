<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<bean id="course" class="com.spring.entity.Course">
	
		<constructor-arg name="cname" value="Java"></constructor-arg>
		<constructor-arg name="cduration" value="500"></constructor-arg>
		<constructor-arg name="ctrainer" value="Amitava Sir"></constructor-arg>
		<constructor-arg>
		<list>
			<value>Sankha</value>
			<value>Sayan</value>
			<value>Owashim</value>
			<value>Akash</value>
		</list>
		</constructor-arg>
		
	</bean>

</beans>